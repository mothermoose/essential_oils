<h1> Order Confirmation </h1>
<h5> Order Id: 57600<%= @order.id %> </h5>
<br>

<% @order.carted_products.each do |cartprod| %>
    <h3><%= cartprod.oil.name %> - <%= number_to_currency(cartprod.oil.price) %> X <%= cartprod.quantity %></h3>
    <br>
<% end %> 


<h4> Subtotal: <%= number_to_currency(@order.subtotal) %> </h4>
<h4> Tax: <%= number_to_currency(@order.tax) %> </h4>
<h2> Grand Total: <%= number_to_currency(@order.total) %> </h2> 
<br>
<h5> Purchased By: <%= @order.user.email %> </h5>
<h5> Purchased On: <%= @order.created_at %> </h5>
