<h1>Essential Oils</h1>

<div class="row">
  <% @oils.each do |oil| %>
  <div class = "col-md-4">
    <div class = "thumbnail well">
      <h2><a href="/oils/<%= oil.id %>"><%= oil.name %></a></h2>
      <h4><%= oil.uses %></h2>
      <h3><%= oil.price %></h2>
      <img src="<%=oil.image%>" style="width:180px;height:228px;">
    </div>
  </div>
  <% end %> 
</div>